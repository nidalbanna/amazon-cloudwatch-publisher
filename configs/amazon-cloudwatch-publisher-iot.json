{
  "agent": {
    "instance": {
      "prefix": "iot",
      "command": "cat /proc/cpuinfo | grep Serial | awk '{print $NF}'"
    },
    "authentication": {
      "iotUrl": "cx99t8884h35y.credentials.iot.ca-central-1.amazonaws.com",
      "roleAlias": "Thermostat-dynamodb-access-role-alias",
      "thingName": "MyHomeThermostat",
      "certificate": [
        "/home/pi/certificate/certificate.pem",
        "/home/pi/certificate/private_key.key"
      ]
    },
    "region": "REGION",
    "metrics_collection_interval": 60,
    "logs_collection_interval": 10,
    "logfile": "/opt/aws/amazon-cloudwatch-publisher/logs/amazon-cloudwatch-publisher.log",
    "debug": false
  },
  "metrics": {
    "namespace": "System/IoTDevice"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/system.log"
          }
        ]
      },
      "journal": {
        "collect": true,
        "include_patterns": [
          "Accepted public key for"
        ]
      }
    },
    "log_group_name": "/system/iot/{instance_id}",
    "retention_in_days": 7
  }
}
